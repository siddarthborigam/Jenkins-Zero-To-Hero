pipeline {
    agent {
        docker {
            image 'docker:20.10.7-git' // Git and Docker pre-installed
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Install Java') {
            steps {
                script {
                    // Switch to root user to install packages
                    sh 'apk add --no-cache openjdk11'
                    
                    // Install OpenJDK in the container using apk (Alpine Linux package manager)
                    sh 'apk update && apk add openjdk11'
                }
            }
        }
        
    }
}
