pipeline {
    agent {
        docker {
            image 'docker:20.10.7-git' // Git and Docker pre-installed
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Install Java') {
            steps {
                script {
                    // Install OpenJDK in the container using apk (Alpine Linux package manager)
                    sh 'apk update && apk add openjdk11'
                }
            }
        }
        stage('Checkout') {
            steps {
                sh 'git clone https://github.com/siddarthborigam/Jenkins-Zero-To-Hero.git'
            }
        }
        stage('Build Java App') {
            steps {
                script {
                    sh 'cd Jenkins-Zero-To-Hero/multi-stage-multi-agent && javac hello_world.java'
                }
            }
        }
        stage('Run Java App') {
            steps {
                script {
                    sh 'cd Jenkins-Zero-To-Hero/multi-stage-multi-agent && java hello_world'
                }
            }
        }
    }
}
